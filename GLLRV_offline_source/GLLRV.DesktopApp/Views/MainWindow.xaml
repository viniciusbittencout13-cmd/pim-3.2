<Window x:Class="GLLRV.DesktopApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GLLRV - Suporte"
        Width="1280"
        Height="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#f2f4f8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- MENU LATERAL -->
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="2"
                Background="#111827">
            <StackPanel Margin="16">
                <TextBlock Text="GLLRV"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0 0 0 24" />

                <Button Content="Usuários"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="UsuariosButton_Click" />

                <Button Content="Relatórios"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="RelatoriosButton_Click" />

                <Button Content="Chamados pendentes"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="ChamadosPendentesButton_Click" />

                <Button Content="Histórico chamados"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="HistoricoChamadosButton_Click" />

                <Button Content="Chamados andamento"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="ChamadosAndamentoButton_Click" />

                <Button Content="Configurações"
                        Margin="0 24 0 0"
                        Height="40"
                        Click="ConfiguracaoButton_Click" />
            </StackPanel>
        </Border>

        <!-- BOTÃO SAIR (TOPO DIREITA) -->
        <Button Grid.Row="0"
                Grid.Column="1"
                Content="SAIR"
                Width="100"
                Height="36"
                Margin="0,12,16,12"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Click="SairButton_Click" />

        <!-- ÁREA DE CONTEÚDO -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Margin="24"
                Background="White"
                CornerRadius="24"
                Padding="24">
            <Grid x:Name="ContentArea" />
        </Border>
    </Grid>
</Window>
