<Window x:Class="GLLRV.DesktopApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GLLRV - Suporte"
        Width="1280"
        Height="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#f2f4f8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- MENU + PERFIL TÉCNICO (ESQUERDA) -->
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="2"
                Background="#111827">
            <StackPanel Margin="16">

                <!-- BLOCO DO TÉCNICO -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <!-- FOTO -->
                    <Border Width="56"
                            Height="56"
                            CornerRadius="28"
                            Background="#ffffff33"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="InitialsText"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </Border>

                    <!-- DADOS DO TÉCNICO -->
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="UserNameText"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="UserLevelText"
                                   Foreground="White"
                                   FontSize="11"/>
                        <TextBlock x:Name="UserCategoryText"
                                   Foreground="White"
                                   FontSize="11"/>
                    </StackPanel>
                </StackPanel>

                <!-- BOTÕES DO MENU -->
                <Button Content="Usuários"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="UsuariosButton_Click" />

                <Button Content="Relatórios"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="RelatoriosButton_Click" />

                <Button Content="Chamados pendentes"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="ChamadosPendentesButton_Click" />

                <Button Content="Histórico chamados"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="HistoricoChamadosButton_Click" />

                <Button Content="Chamados andamento"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="ChamadosAndamentoButton_Click" />

                <Button Content="Configurações"
                        Margin="0 24 0 0"
                        Height="40"
                        Click="ConfiguracaoButton_Click" />
            </StackPanel>
        </Border>

        <!-- TOPO DIREITA -->
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,22,0">
            <TextBlock x:Name="DateTimeText"
                       VerticalAlignment="Center"
                       Margin="0,0,24,0"
                       Foreground="#444"
                       FontSize="13"/>

            <Button Content="SAIR"
                    Width="100"
                    Height="36"
                    Click="SairButton_Click"
                    Background="#E5E5E5"
                    Foreground="#111"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="SAIR"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- ÁREA DE CONTEÚDO -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Margin="24"
                Background="White"
                CornerRadius="24"
                Padding="24">
            <ContentControl x:Name="ContentHost" />
        </Border>
    </Grid>
</Window>
