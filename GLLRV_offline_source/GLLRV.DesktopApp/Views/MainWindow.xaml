
<Window x:Class="GLLRV.DesktopApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GLLRV - Suporte" Height="700" Width="1100" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
       <StackPanel Background="#111827" Margin="16">
            <TextBlock Text="GLLRV" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>
            <Button Content="Chamados" Click="Chamados_Click" Margin="0,4" />
            <Button Content="Sair" Click="Sair_Click" Margin="0,4" />
        </StackPanel>
        <Border Grid.Column="1" Margin="12" CornerRadius="12" Background="#F5F5F5">
            <StackPanel Margin="16">
                <TextBlock Text="Bem-vindo!" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="Este é um demo offline (JSON). Edite os .json em /data para simular dados." Margin="0,8,0,0"/>
                <TextBlock Text="Usuário logado:" Margin="0,16,0,0"/>
                <TextBlock x:Name="UserNameText" FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
