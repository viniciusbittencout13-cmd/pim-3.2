<Window x:Class="GLLRV.DesktopApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GLLRV - Suporte"
        Width="1280"
        Height="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#f2f4f8">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- MENU LATERAL -->
        <Border Grid.Column="0" Background="#111827">
            <StackPanel Margin="16">
                <TextBlock Text="GLLRV"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0 0 0 24" />

                <Button Content="Início"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="HomeButton_Click" />

                <Button x:Name="ChamadosButton"
                        Content="Chamados"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="ChamadosButton_Click" />

                <Button Content="Sair"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="SairButton_Click" />
            </StackPanel>
        </Border>

        <!-- ÁREA DE CONTEÚDO -->
        <Border Grid.Column="1"
                Margin="24"
                Background="White"
                CornerRadius="24"
                Padding="24">
            <Grid x:Name="ContentArea">
                <!-- Conteúdo inicial -->
                <StackPanel>
                    <TextBlock Text="Bem-vindo!"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0 0 0 8" />
                    <TextBlock Text="Este é o modo offline (JSON)."
                               FontSize="14" />
                    <TextBlock Text="Clique em Chamados para visualizar os chamados."
                               FontSize="14"
                               Margin="0 8 0 0" />
                    <TextBlock Text="Usuário logado: admin"
                               FontSize="14"
                               Margin="0 16 0 0" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
