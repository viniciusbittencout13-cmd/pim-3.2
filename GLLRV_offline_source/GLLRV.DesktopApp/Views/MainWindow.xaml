<Window x:Class="GLLRV.DesktopApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GLLRV - Suporte"
        Width="1280"
        Height="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#f2f4f8">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- MENU + PERFIL TÉCNICO (ESQUERDA) -->
        <Border Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="2"
                Background="#111827">
            <StackPanel Margin="16">

                <!-- BLOCO DO TÉCNICO -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                    <!-- FOTO (placeholder) -->
                    <Border Width="56"
                            Height="56"
                            CornerRadius="28"
                            Background="#ffffff33"
                            VerticalAlignment="Center">
                        <!-- Quando tiver foto, dá pra usar ImageBrush aqui -->
                        <TextBlock Text="VB"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </Border>

                    <!-- DADOS DO TÉCNICO -->
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="VINICIUS BITTENCOURT"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Bold"/>
                        <TextBlock Text="TÉCNICO: NÍVEL 2"
                                   Foreground="White"
                                   FontSize="11"/>
                        <TextBlock Text="CATEGORIA: SERVIDORES / REDE"
                                   Foreground="White"
                                   FontSize="11"/>
                    </StackPanel>
                </StackPanel>

                <!-- BOTÕES DO MENU -->
                <Button Content="Usuários"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="UsuariosButton_Click" />

                <Button Content="Relatórios"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="RelatoriosButton_Click" />

                <Button Content="Chamados pendentes"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="ChamadosPendentesButton_Click" />

                <Button Content="Histórico chamados"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="HistoricoChamadosButton_Click" />

                <Button Content="Chamados andamento"
                        Margin="0 0 0 8"
                        Height="40"
                        Click="ChamadosAndamentoButton_Click" />

                <Button Content="Configurações"
                        Margin="0 24 0 0"
                        Height="40"
                        Click="ConfiguracaoButton_Click" />
            </StackPanel>
        </Border>

        <!-- BOTÃO SAIR (TOPO DIREITA) -->
<Button Grid.Row="0"
        Grid.Column="1"
        Width="100"
        Height="36"
        Margin="0,12,16,12"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        Click="SairButton_Click"
        Background="#E5E5E5"
        Foreground="#111"
        BorderThickness="0"
        FontWeight="Bold"
        Cursor="Hand">
    <Button.Template>
        <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" CornerRadius="18">
                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Content="SAIR"/>
            </Border>
        </ControlTemplate>
    </Button.Template>
</Button>
        <!-- ÁREA DE CONTEÚDO -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Margin="24"
                Background="White"
                CornerRadius="24"
                Padding="24">
            <Grid x:Name="ContentArea" />
        </Border>
    </Grid>
</Window>
