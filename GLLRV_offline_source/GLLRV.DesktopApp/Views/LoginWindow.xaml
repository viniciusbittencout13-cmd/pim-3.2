<Window x:Class="GLLRV.DesktopApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GLLRV - Login"
        Width="1280"
        Height="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFE9F0F5">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="500">
            <TextBlock Text="Seja Bem Vindo!"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Acesse com seu usuário e senha"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>

            <TextBlock Text="NOME DE USUÁRIO" />
            <TextBox x:Name="UserNameTextBox"
                     Height="40"
                     Margin="0,4,0,16"/>

            <TextBlock Text="SENHA" />
            <PasswordBox x:Name="PasswordBox"
                         Height="40"
                         Margin="0,4,0,16"/>

            <TextBlock Text="ESQUECI MINHA SENHA"
                       Foreground="Gray"
                       FontSize="12"
                       HorizontalAlignment="Right"
                       Margin="0,0,0,16"/>

            <Button Content="ENTRAR"
                    Height="50"
                    FontSize="18"
                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
