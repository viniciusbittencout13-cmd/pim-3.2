<Window x:Class="GLLRV.DesktopApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GLLRV - Login"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#EFF4F8">
    <Grid>
        <StackPanel Width="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0">
            <TextBlock Text="Seja Bem Vindo!"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8" />
            <TextBlock Text="Acesse com seu usuário e senha"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24" />

            <TextBlock Text="NOME DE USUÁRIO" />
            <TextBox x:Name="UsernameTextBox"
                     Height="32"
                     Margin="0,4,0,16" />

            <TextBlock Text="SENHA" />
            <PasswordBox x:Name="PasswordBox"
                         Height="32"
                         Margin="0,4,0,16" />

            <TextBlock Text="ESQUECI MINHA SENHA"
                       Foreground="Gray"
                       FontSize="12"
                       HorizontalAlignment="Right"
                       Margin="0,0,0,24" />

            <Button Content="ENTRAR"
                    Height="48"
                    FontSize="18"
                    Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>
