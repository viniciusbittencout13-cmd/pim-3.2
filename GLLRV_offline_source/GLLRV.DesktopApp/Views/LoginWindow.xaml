<Window x:Class="GLLRV.DesktopApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GLLRV - Suporte"
        WindowStartupLocation="CenterScreen"
        Width="1280"
        Height="720"
        Background="#FFEFF3F6">

    <Window.Resources>

        <!-- Estilo dos botões do menu lateral -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Background" Value="#1C2535"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg"
                                        Property="Background"
                                        Value="#293448"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bg"
                                        Property="Background"
                                        Value="#384565"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Menu lateral -->
            <ColumnDefinition Width="260"/>
            <!-- Conteúdo -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <!-- Topo -->
            <RowDefinition Height="80"/>
            <!-- Área principal -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Fundo do menu lateral -->
        <Border Grid.RowSpan="2" Background="#0F1825"/>

        <!-- Info usuário (topo esquerdo) -->
        <StackPanel Orientation="Horizontal"
                    Margin="18,14,0,0">
            <!-- Avatar redondo (placeholder) -->
            <Border Width="52"
                    Height="52"
                    Background="#ffffff22"
                    CornerRadius="26"
                    VerticalAlignment="Center">
                <TextBlock x:Name="InitialsText"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"/>
            </Border>

            <StackPanel Margin="10,4,0,0"
                        VerticalAlignment="Center">
                <TextBlock x:Name="UserNameText"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="14"/>
                <TextBlock x:Name="UserLevelText"
                           Foreground="White"
                           FontSize="11"/>
                <TextBlock x:Name="UserCategoryText"
                           Foreground="White"
                           FontSize="11"/>
            </StackPanel>
        </StackPanel>

        <!-- Menu lateral (sem INÍCIO, já começamos em Chamados Pendentes) -->
        <StackPanel Grid.Row="1"
                    Margin="14,20,14,20">
            <TextBlock Text="MENU"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="4,0,0,12"/>

            <Button Content="USUÁRIOS"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="UsuariosButton_Click"/>

            <Button Content="RELATÓRIOS"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="RelatoriosButton_Click"/>

            <Button Content="CHAMADOS PENDENTES"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="ChamadosPendentesButton_Click"/>

            <Button Content="HISTÓRICO CHAMADOS"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="HistoricoChamadosButton_Click"/>

            <Button Content="CHAMADOS ANDAMENTO"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="ChamadosAndamentoButton_Click"/>

            <Button Content="CONFIGURAÇÃO"
                    Style="{StaticResource MenuButtonStyle}"
                    Click="ConfiguracaoButton_Click"/>
        </StackPanel>

        <!-- Topo direita: data/hora + SAIR -->
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,22,0">
            <TextBlock x:Name="DateTimeText"
                       VerticalAlignment="Center"
                       Margin="0,0,24,0"
                       Foreground="#444"
                       FontSize="13"/>

            <Button Content="SAIR"
                    Width="120"
                    Height="40"
                    Click="SairButton_Click"
                    Background="#E5E5E5"
                    Foreground="#111"
                    BorderBrush="Transparent"
                    FontWeight="Bold"
                    Cursor="Hand"
                    CornerRadius="20"/>
        </StackPanel>

        <!-- Área do conteúdo (direita, com cartão branco) -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Margin="18"
                Background="White"
                CornerRadius="10"
                SnapsToDevicePixels="True">
            <ContentControl x:Name="ContentHost"/>
        </Border>

    </Grid>
</Window>
