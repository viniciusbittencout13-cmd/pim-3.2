<Window x:Class="GLLRV.DesktopApp.Views.FirstAccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Primeiro Acesso" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF0F4F8">

        <StackPanel Margin="0,80,0,0" HorizontalAlignment="Center" Width="400">

            <TextBlock Text="Seja Bem Vindo!"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>

            <TextBlock Text="Digite uma frase de segurança" />
            <TextBox x:Name="SecurityPhraseTextBox"
                     Height="32"
                     Margin="0,4,0,16"/>

            <TextBlock Text="Nova senha" />
            <PasswordBox x:Name="NewPasswordBox"
                         Height="32"
                         Margin="0,4,0,8"/>

            <TextBlock Text="Repita a nova senha" />
            <PasswordBox x:Name="ConfirmPasswordBox"
                         Height="32"
                         Margin="0,4,0,24"/>

            <!-- IMPORTANTE: o Click TEM que ser ConfirmButton_Click -->
            <Button Content="CONFIRMAR"
                    Height="40"
                    FontSize="16"
                    Click="ConfirmButton_Click"/>
        </StackPanel>

    </Grid>
</Window>                 Height="35"
                 FontSize="14"
                 Padding="8"
                 />

        <!-- Nova senha -->
        <TextBlock Grid.Row="4"
                   Text="Nova senha"
                   FontSize="14"
                   Margin="0,15,0,5"/>
        <PasswordBox x:Name="NewPasswordBox"
                     Grid.Row="5"
                     Height="35"
                     FontSize="14"
                     Padding="8"/>

        <!-- Confirmar nova senha -->
        <TextBlock Grid.Row="6"
                   Text="Repita a nova senha"
                   FontSize="14"
                   Margin="0,15,0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox"
                     Grid.Row="7"
                     Height="35"
                     FontSize="14"
                     Padding="8"
                     VerticalAlignment="Top"/>

        <!-- Botão confirmar -->
     <Button Content="CONFIRMAR"
        Height="50"
        FontSize="18"
        Click="ConfirmButton_Click"/>
    </Grid>
</Window>
