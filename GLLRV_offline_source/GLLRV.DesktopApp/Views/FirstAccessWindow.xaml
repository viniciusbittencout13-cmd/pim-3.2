<Window x:Class="GLLRV.DesktopApp.Views.FirstAccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GLLRV - Primeiro Acesso"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFEFF3F6">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Seja Bem-Vindo! Primeiro Acesso"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Frase de segurança -->
        <TextBlock Grid.Row="2"
                   Text="Digite uma frase de segurança"
                   FontSize="14"
                   Margin="0,0,0,5"/>
        <TextBox x:Name="SecurityPhraseTextBox"
                 Grid.Row="3"
                 Height="35"
                 FontSize="14"
                 Padding="8"
                 />

        <!-- Nova senha -->
        <TextBlock Grid.Row="4"
                   Text="Nova senha"
                   FontSize="14"
                   Margin="0,15,0,5"/>
        <PasswordBox x:Name="NewPasswordBox"
                     Grid.Row="5"
                     Height="35"
                     FontSize="14"
                     Padding="8"/>

        <!-- Confirmar nova senha -->
        <TextBlock Grid.Row="6"
                   Text="Repita a nova senha"
                   FontSize="14"
                   Margin="0,15,0,5"/>
        <PasswordBox x:Name="ConfirmPasswordBox"
                     Grid.Row="7"
                     Height="35"
                     FontSize="14"
                     Padding="8"
                     VerticalAlignment="Top"/>

        <!-- Botão confirmar -->
        <Button x:Name="ConfirmButton"
                Content="CONFIRMAR"
                Width="220"
                Height="45"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"
                Click="ConfirmButton_Click"
                />
    </Grid>
</Window>
